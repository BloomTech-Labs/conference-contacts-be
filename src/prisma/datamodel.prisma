type User {
  id: ID! @id
  authId: String! @unique
  name: String
  picture: String
  birthdate: String
  gender: GenderType
  industry: String
  jobtitle: String
  bio: String
  profile: [ProfileField]!
}

enum GenderType {
  MALE
  FEMALE
  NONBINARY
}

type ProfileField {
  id: ID! @id
  user: User!
  value: String!
  type: ProfileFieldType!
  privacy: ProfileFieldPrivacy!
  preferredContact: Boolean @default(value: false)
}

enum ProfileFieldType {
  EMAIL
  PHONE
  SOCIAL
}

enum ProfileFieldPrivacy {
  PUBLIC
  PRIVATE
  CONNECTED
}